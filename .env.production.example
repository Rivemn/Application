# ===================================
#      PROJECT & ENVIRONMENT (PRODUCTION)
# ===================================
# These values define that the application is running in production mode
PROJECT_NAME=myapp_prod
ASPNETCORE_ENVIRONMENT=Production
NODE_ENV=production
BUILD_CONFIGURATION=Release

# ===================================
#        DATABASE (PRODUCTION)
# ===================================
# The host/IP address of your production PostgreSQL server
DB_HOST=REPLACE_WITH_PRODUCTION_DB_HOST
DB_NAME=myapp_db_prod
DB_USER=postgres
# !!! REPLACE THIS WITH YOUR REAL PRODUCTION DATABASE PASSWORD !!!
DB_PASSWORD=REPLACE_WITH_YOUR_PRODUCTION_DB_PASSWORD
DB_PORT=5432

# ===================================
#       BACKEND APPLICATION
# ===================================
# The internal port the backend application runs on (Nginx will proxy to this)
BACKEND_PORT=5000
# The public-facing URL where the API is accessible
BACKEND_URL=https://eventmanagement.duckdns.org/api
# Log level for production (Warning is a good default)
LOG_LEVEL=Warning


JWT__KEY=REPLACE_WITH_A_VERY_STRONG_RANDOM_SECRET_KEY
JWT__ISSUER=myapp_backend
JWT__AUDIENCE=myapp_frontend
JWT__LIFETIME_MINUTES=60


AiAssistant__GeminiApiKey=YOURKEY


DOMAIN=eventmanagement.duckdns.org
NGINX_PORT=80
NGINX_PORT_SSL=443