# .env (для PRODUCTION сервера)

# ====== PROJECT ======
PROJECT_NAME=myapp_prod

# ====== ENVIRONMENT ======
ASPNETCORE_ENVIRONMENT=Production
NODE_ENV=production
BUILD_CONFIGURATION=Release

# ====== DATABASE (PostgreSQL) ======
DB_NAME=myapp_db_prod
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_TO_A_VERY_SECURE_PASSWORD
DB_PORT=5432 # Порт 5432 доступен только внутри Docker-сети

# ====== BACKEND (.NET) ======
BACKEND_PORT=5000
# Frontend будет обращаться к вашему реальному домену по HTTPS
BACKEND_URL=https://<your-domain.com>/api
LOG_LEVEL=Warning # Логируем только ошибки и предупреждения
# ====== JWT AUTH ======
JWT__KEY=super_secret_jwt_key_12345     # длинный, случайный ключ
JWT__ISSUER=myapp_local_backend
JWT__AUDIENCE=myapp_local_frontend
JWT__LIFETIME_MINUTES=60


# ====== NGINX ======
# Ваш реальный домен, который смотрит на IP сервера
DOMAIN=<your-domain.com>
NGINX_PORT=80 # Для редиректа на HTTPS и Certbot
NGINX_PORT_SSL=443 # Для HTTPS трафика