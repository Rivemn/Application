# ===================================
#      PROJECT & ENVIRONMENT
# ===================================
# Имя проекта, используется для Docker, логов и т.д.
PROJECT_NAME=myapp_dev


ASPNETCORE_ENVIRONMENT=Development
NODE_ENV=development
BUILD_CONFIGURATION=Debug


# ===================================
#        DATABASE (POSTGRES)
# ===================================
# Имя базы данных для разработки
DB_NAME=myapp_db_dev
DB_USER=postgres
DB_PASSWORD=REPLACE_WITH_YOUR_LOCAL_DB_PASSWORD
DB_PORT=5432
# DB_HOST=localhost (часто неявно, но можно добавить)


# ===================================
#       BACKEND APPLICATION
# ===================================
# Порт, на котором локально запускается API
BACKEND_PORT=5000
# URL для локального тестирования
BACKEND_URL=http://localhost:5000/api
# Уровень логирования (Debug - показывает больше всего информации)
LOG_LEVEL=Debug


# ===================================
#         SECURITY (JWT)
# ===================================
# Сгенерируйте случайный ключ для разработки
JWT__KEY=REPLACE_WITH_A_STRONG_RANDOM_KEY_FOR_DEVELOPMENT
JWT__ISSUER=myapp_backend
JWT__AUDIENCE=myapp_frontend
JWT__LIFETIME_MINUTES=60


# ===================================
#         EXTERNAL API KEYS
# ===================================
# Ваш API-ключ от Google Gemini
GEMINI_API_KEY=REPLACE_WITH_YOUR_GEMINI_API_KEY


# ===================================
#        NGINX / DOMAIN
# ===================================
# Домен для локальной разработки
DOMAIN=localhost
NGINX_PORT=80
NGINX_PORT_SSL=443