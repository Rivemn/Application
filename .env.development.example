# .env (для ЛОКАЛЬНОЙ разработки)

# ====== PROJECT ======
PROJECT_NAME=myapp_local

# ====== ENVIRONMENT ======
ASPNETCORE_ENVIRONMENT=Development
NODE_ENV=development
BUILD_CONFIGURATION=Debug

# ====== DATABASE (PostgreSQL) ======
DB_NAME=myapp_db_local
DB_USER=postgres
DB_PASSWORD=postgres # Простой пароль для local
DB_PORT=5432 # Открываем порт 5432 на хосте

# ====== BACKEND (.NET) ======
BACKEND_PORT=5000
# Frontend (в браузере) обращается к Nginx по http://localhost/api
BACKEND_URL=http://localhost/api
LOG_LEVEL=Information # Подробное логирование

# ====== JWT AUTH ======
JWT__KEY=super_secret_jwt_key_12345     # длинный, случайный ключ
JWT__ISSUER=myapp_local_backend
JWT__AUDIENCE=myapp_local_frontend
JWT__LIFETIME_MINUTES=60

# ====== NGINX ======
# Nginx слушает 'localhost'
DOMAIN=localhost
NGINX_PORT=80 # HTTP порт
NGINX_PORT_SSL=443 # Порт для HTTPS (не будет использоваться локально)